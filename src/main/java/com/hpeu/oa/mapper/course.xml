<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hpeu.oa.dao.CourseDao">
    <insert id="add">
    	insert into course(admin_id,courseName,coment,putDate) values(#{adminId},#{courseName},#{coment},#{putDate})
    </insert>
    
    <select id="findOne" resultType="com.hpeu.oa.entity.Course">
    	select id,courseName from course where courseName = #{courseName}
    </select>
    
    <select id="findTime" resultType="java.sql.Timestamp">
    	select put_date from course where name = #{courseName}
    </select>
    
    <select id="getAll" resultType="com.hpeu.oa.entity.Cou">
		SELECT
		   c.id,
		   c.courseName,
		   c.coment,
		   c.putDate,
		   a.adminName,
		   r.resourceName
		FROM
		   course c,
		   admin a,
		   resource r
		WHERE
		   c.admin_id = a.id
		AND c.id = r.course_id 
    </select>
    
    <select id="getCount" resultType="int">
    	select count(id) as count from course
    </select>
    
    <delete id="delete">
    	delete from course where id=#{id}
    </delete>

</mapper>